{
  "appId": "com.botfoods.desktop",
  "productName": "BotFoods Desktop",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "mac": {
    "category": "public.app-category.business",
    "icon": "public/botfood-icon.png",
    "target": ["zip"]
  },
  "win": {
    "icon": "public/botfood-icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "linux": {
    "icon": "public/botfood-icon.png",
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": null
}