{
  "appId": "com.botfoods.desktop",
  "productName": "BotFoods Desktop",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "mac": {
    "category": "public.app-category.business",
    "icon": "public/botfood-icon.png",
    "target": ["zip"]
  },
  "win": {
    "icon": "public/botfood-icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "icon": "public/botfood-icon.png",
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "BotFoods-Desktop-${version}-Setup.${ext}"
  },
  "portable": {
    "artifactName": "BotFoods-Desktop-${version}-Portable.exe"
  },
  "publish": {
    "provider": "github",
    "owner": "BotFoods",
    "repo": "botfoods-desktop"
  }
}