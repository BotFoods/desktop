{
  "$schema": "[https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json](https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json)",
  "appId": "com.botfood.pdv",
  "productName": "BotFood PDV",
  "directories": {
    "output": "release/",
    "buildResources": "electron/build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "extraResources": [
    {
      "from": "../service/dist",
      "to": "service",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "electron/build/icon.ico",
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "runAfterFinish": true,
    "include": "electron/build/installer.nsh"
  }
}